FROM golang:1.20

WORKDIR /usr/src/app

# pre-copy/cache go.mod for pre-downloading dependencies and only redownloading them in subsequent builds if they change
COPY go.mod go.sum ./
RUN go mod download && go mod verify

COPY . .
RUN make http cli
RUN cp bin/pm-http /usr/local/bin/app && cp bin/pm-cli /usr/local/bin/pm-cli

CMD ["app"]